
# Displays available commands

THIS_DIR=`dirname $0`
for s in $THIS_DIR/*; do
  if [ -L $s ]; then
    echo '- ' `basename $s` '->' `realpath $s`
  elif [ -f $s ]; then
    second_line=`cat $s | head -2 | tail -1`
    if [[ $second_line == "#"* ]]; then
      echo '- ' `basename $s` '         ' $second_line
    else
      echo '- ' `basename $s`
    fi
  fi
done
